{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "canonical-address.schema.json",
  "title": "Canonical Address",
  "description": "Actor addressing format across all runtimes: runtime/actor-id",
  "definitions": {
    "CanonicalAddress": {
      "type": "string",
      "pattern": "^@\\([a-z0-9-]+/[a-z0-9-]+\\)$",
      "description": "Format: @(<runtime>/<actor-id>)",
      "examples": [
        "@(browser/client-ui)",
        "@(seag/agent-1)",
        "@(cloudflare/signal-hub)"
      ]
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/CanonicalAddress"
    }
  ]
}
