// Convergence Domain Protocols
//
// Domain model protocols extracted from Simplify/UGS including:
// - Graph primitives (Node, Edge, Address)
// - Domain entities (Agent, Task, Session, Human)
// - Query system (criteria, evaluator, pattern matching)
// - Knowledge management (embeddings, convergence, session state)

package convergence:domain@0.1.0;

world domain {
    // Graph primitives
    import address;
    import node;
    import edge;
    import graph;

    // Entity model
    import entity;
    import agent;
    import task;
    import session;
    import human;

    // Query system
    import criteria;
    import query;
    import query-builder;

    // Knowledge management
    import embedding;
    import convergence;
    import session-state;

    // Core dependencies
    import signal-hub:core/types@0.1.0;
    import signal-hub:core/event@0.1.0;
}

world domain-graph {
    // Graph-only functionality
    export address-resolver;
    export node;
    export node-ops;
    export edge;
    export edge-ops;
    export graph;
}

world domain-entity {
    // Entity management
    export entity;
    export entity-ops;
    export agent;
    export agent-ops;
    export task;
    export task-ops;
    export session;
    export session-ops;
    export human;
    export human-ops;

    // Depends on graph primitives
    import address;
    import node;
    import edge;
}

world domain-query {
    // Query and knowledge functionality
    export criteria;
    export query;
    export query-builder;
    export embedding;
    export convergence;
    export session-state;

    // Depends on graph and entity
    import address;
    import node;
    import entity;
}
