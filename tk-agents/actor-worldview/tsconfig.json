{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "paths": {
      "@seag/*": ["seag/*"],
      "@tests/*": ["tests/*"]
    },
    "types": ["bun-types"]
  },
  "include": ["seag/**/*", "tests/**/*"]
}
