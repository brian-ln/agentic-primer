{
  "name": "agentic-primer",
  "version": "0.1.0",
  "description": "Protocol-first architecture for convergence systems",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "ugs"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "bun test packages/actors packages/bun packages/knowledge packages/protocols packages/signal-hub-client packages/cloudflare/src/__tests__/types.test.ts simplify/ ugs/src/",
    "test:integration": "RUN_SLOW_TESTS=true bun test ugs/tests/integration/",
    "test:e2e": "RUN_E2E=true bun test ugs/tests/e2e/",
    "test:cf": "cd packages/cloudflare && bun test",
    "generate:types": "tsx scripts/generate-domain-types.ts",
    "generate:hub-types": "tsx scripts/generate-hub-types.ts",
    "validate:domain": "tsx core/wit/domain/validation-test.ts",
    "typecheck": "tsc --noEmit",
    "check": "pnpm run typecheck"
  },
  "keywords": [
    "convergence",
    "protocols",
    "universal-graph",
    "actor-model"
  ],
  "author": "Brian Lloyd-Newberry",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@types/node": "^25.2.1",
    "json-schema-to-typescript": "^15.0.4",
"tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "zod": "^4.3.6"
  }
}
