# Git attributes for consistent behavior across platforms

# Auto detect text files and normalize line endings to LF
* text=auto

# Shell scripts - always LF
*.sh text eol=lf

# YAML files - always LF
*.yml text eol=lf
*.yaml text eol=lf

# Markdown files - always LF
*.md text eol=lf

# JSON files - always LF
*.json text eol=lf

# Python files - always LF
*.py text eol=lf

# Bash - always LF
*.bash text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.zip binary
*.tar binary
*.gz binary

# Git workflow files - always LF
.github/** text eol=lf
