{
  "copilot": {
    "name": "GitHub Copilot Autonomous Agent",
    "version": "1.0.0",
    "description": "Autonomous issue-driven development agent for GitHub repositories"
  },
  "repository": {
    "minimum_nodejs_version": "18.0.0",
    "minimum_python_version": "3.8",
    "default_branch": "main",
    "issue_tracking": true,
    "pr_required": true
  },
  "permissions": {
    "contents": "write",
    "pull_requests": "write",
    "issues": "write",
    "actions": "read",
    "checks": "write"
  },
  "issue_handling": {
    "enabled": true,
    "auto_assign": true,
    "auto_label": true,
    "processing_labels": [
      "ai-task",
      "enhancement",
      "bug"
    ],
    "skip_labels": [
      "wontfix",
      "duplicate",
      "help-wanted"
    ],
    "default_assignee": "author"
  },
  "pull_requests": {
    "auto_assign": true,
    "auto_label": true,
    "require_linked_issue": false,
    "validate_syntax": true,
    "run_tests": true,
    "allow_direct_merge": false,
    "require_review": true
  },
  "validation": {
    "title_format": "conventional-commits",
    "min_title_length": 5,
    "min_body_length": 10,
    "require_changelog": false,
    "check_yaml": true,
    "check_shell": true,
    "check_markdown": true,
    "check_json": true
  },
  "testing": {
    "framework": "auto-detect",
    "run_on_pr": true,
    "fail_on_test_failure": true,
    "timeout_seconds": 300,
    "skip_slow_tests": false
  },
  "branch_naming": {
    "feature_prefix": "feat/",
    "bugfix_prefix": "fix/",
    "ai_prefix": "ai/",
    "issue_pattern": "ai/issue-{issue_number}"
  },
  "commit_conventions": {
    "style": "conventional-commits",
    "scope_required": false,
    "body_required": false,
    "footer_required": false,
    "breaking_change_header": "BREAKING CHANGE"
  },
  "labels": {
    "ai-task": {
      "description": "Task for autonomous AI agent",
      "color": "7057ff",
      "auto_created": true
    },
    "ai-generated": {
      "description": "Generated by AI agent",
      "color": "6f42c1",
      "auto_created": true
    },
    "enhancement": {
      "description": "New feature or improvement",
      "color": "a2eeef",
      "auto_created": false
    },
    "bug": {
      "description": "Something isn't working",
      "color": "d73a4a",
      "auto_created": false
    },
    "validated": {
      "description": "Passed validation checks",
      "color": "0366d6",
      "auto_created": true
    },
    "code-changes": {
      "description": "Contains code changes",
      "color": "fbca04",
      "auto_created": true
    },
    "documentation": {
      "description": "Documentation only",
      "color": "0075ca",
      "auto_created": true
    }
  },
  "assignees": {
    "default_reviewer": null,
    "code_owners": [],
    "maintainers": []
  },
  "knowledge_base": {
    "enabled": true,
    "location": ".copilot/knowledge-base.md",
    "auto_update": true,
    "patterns_location": ".copilot/patterns/",
    "context_location": ".copilot/context.json"
  },
  "logging": {
    "enabled": true,
    "location": ".copilot/logs/",
    "format": "json",
    "retention_days": 30,
    "compress_old_logs": true
  },
  "features": {
    "auto_fix_style_issues": true,
    "auto_fix_lint_warnings": false,
    "suggest_improvements": true,
    "track_metrics": true,
    "learning_mode": true
  },
  "rate_limiting": {
    "issues_per_hour": 10,
    "prs_per_hour": 5,
    "api_calls_per_minute": 60
  }
}
